<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Labora - @ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/icons-1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <script src="~/Scripts/Sweetalert2/dist/sweetalert2.all.min.js"></script>
    <script src="~/Scripts/Sweetalert2/dist/sweetalert2.min.js"></script>
    <link href="~/Scripts/Sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/js-cookie/js.cookie.js"></script>
</head>
<body style="background-image:url(../../Resources/ImagesApp/Background.jpg); background-repeat:no-repeat;background-attachment:fixed; background-size:cover;">
    @*<body style="background-color: #F1F1F1">*@
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #F1F1F1; box-shadow: 15px 0px 15px black ">
            <div class="container-fluid">
                <a class="navbar-brand" href="/" style="font-family:Castellar; font-size:20px; font-weight:bolder; color:black">
                    L A B
                    <img src="~/Resources/ImagesApp/Logo.png" style="height:20px" />
                    R A
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a style="color: black; font-weight: bold" class="nav-link" aria-current="page" href="/Home/Home"><i class="bi-house"></i>  Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: black; font-weight: bold" class="nav-link" aria-current="page" href="/Home/Contact"><i class="bi-envelope"></i>  Contacto</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a style="color: black; font-weight: bold" class="nav-link" aria-current="page" href="/Account/Login"><i class="bi-file-earmark-lock"></i>  Ingresar</a>
                        </li>
                        <li class="nav-item">
                            <a style="color: black; font-weight: bold" class="nav-link" aria-current="page" href="/Account/Register"><i class="bi-person-plus"></i>  Registrarse</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container body-content" style="margin-top:30px">
            @RenderBody()
        </div>
        <div style="">
            <footer style="background-color: #F1F1F1; width: 100%; text-align: center; position: fixed; bottom: 0px; box-shadow: 0px -5px 23px 3px black ">
                <label style="font-size:12px; color:black;"><strong>Labora Aplication</strong> Versión 1.0.0 - Todos los Derechos reservados &copy; By GcSoftDev @DateTime.Now.Year</label>
            </footer>
        </div>

        <script src="~/Scripts/jquery-3.6.0.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </body>
</html>

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/ScriptsApp/DocumentType.js"></script>
<script src="~/ScriptsApp/Register.js"></script>
<div>
    <label style="font-weight:bold">Crea tu cuenta en LABORA</label>
    <br />
    <label style="text-align:justify;margin-top:10px;margin-bottom:15px">Completa los siguientes datos para realizar el registro.</label>
    <table class="table table-borderless">
        <tr>
            <td>
                <span>Correo Electronico</span>
                <input class="form-control" type="email" name="name" id="Email" value="" autocomplete="off" />
            </td>
        </tr>
        <tr>
            <td>
                <span>Contraseña</span>
                <input class="form-control" type="password" name="name" id="Password" value="" maxlength="16" autocomplete="off" />
            </td>
        </tr>
        <tr>
            <td>
                <span>Confirmar Contraseña</span>
                <input class="form-control" type="password" name="name" id="ConfirmPassword" value="" maxlength="16" autocomplete="off" />
            </td>
        </tr>
        <tr>
            <td>
                <span>Tipo Documento</span>
                <select class="form-control" id="SelectDocumentType"></select>
            </td>
        </tr>
        <tr>
            <td>
                <span>Número Identificación (*)</span>
                <input class="form-control" type="text" name="name" id="IdentificationNumber" value="" autocomplete="off" />
            </td>
        </tr>
        <tr>
            <td>
                <label style="color:red">* Verifique su número de idenficación antes de realizar el registro, no prodra modificarlo despues.</label>
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-primary btn-sm" onclick="Register()">Registrarse</button>
            </td>
        </tr>
    </table>
</div>


<script>
    $(document).ready(function () {
        ListDocumentType();
    });
</script>